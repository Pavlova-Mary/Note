@model WebApplication3.Controllers.Note

<h3>Уверены что хотите удалить заметку ?</h3>
<div>
    <h4>Note</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Текст заметки
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Text)
        </dd>
        <dt class = "col-sm-2">
            Дата создания:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Created)
        </dd>
        <dt class = "col-sm-2">
            Крайний срок:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Deadline)
        </dd>
        <dt class = "col-sm-2">
            Текущая
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsCurrent)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <input name="Id" value="@Convert.ToInt32(ViewContext.RouteData.Values["id"].ToString())" hidden="hidden" />
        <a asp-action="Index">Вернуться к заметкам</a>
    </form>
</div>
